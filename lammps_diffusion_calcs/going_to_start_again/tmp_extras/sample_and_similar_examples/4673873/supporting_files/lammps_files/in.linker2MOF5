shell           touch running.txt
log             log.linker2MOF5
units           real
atom_style      full
#boundary        p p p

pair_style      lj/cut 12
bond_style      harmonic
angle_style     hybrid cosine/periodic fourier harmonic 
dihedral_style  harmonic
improper_style  fourier

#dielectric      1.0
special_bonds   lj 0.0 0.0 1.0
pair_modify     tail yes mix arithmetic
box tilt        large
read_data       data.linker2MOF5
#read_data       restart.equil.data

#### Atom Groupings ####
#group           fram     id   1:760
#### END Atom Groupings ####
variable temp equal 300.0
variable        dt         equal 1.00
variable        tdamp      equal 100*${dt}
variable        tequil     equal 50000
variable        printequil equal 1000
variable        trun       equal 100000
variable        dumpevery  equal 50

min_style       sd
variable        min_eval   equal 1.00e-03
variable        prev_E     equal 50000.00
variable        iter       loop 100000
label           loop_min
min_style       sd
minimize        1.00e-03 1.00e-03 100 1000

fix             2 all langevin ${temp} ${temp} ${tdamp} 2041723
fix             3 all nve
fix             4 all momentum 1 linear 1 1 1 angular

thermo          ${printequil}
run             ${tequil}
#restart         ${tequil} equil.restart
write_restart   restart.equil
unfix           2
unfix           3

#read_restart    restart.equil
#compute         thermo_pe all pe
#compute         thermo_pe all pe
#compute         thermo_ke all ke
dump            linker2MOF5_lammpstrj all atom ${dumpevery} linker2MOF5_mov.lammpstrj.*
#dump            peke all thermo_pe thermo_ke 1 pe_ke.txt
fix             5 all nvt temp ${temp} ${temp} ${tdamp}
thermo_style    custom step etotal pe ke
thermo          1
run             1
print           energy-start
run             ${trun}
print           energy-stop
unfix           5
undump          linker2MOF5_lammpstrj
shell           rm running.txt
