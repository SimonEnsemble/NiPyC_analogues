log             log.Pn_Ni-PyC-NH2 append
units           real  # grams/mole, angstrom, femtoseconds, Kcal/mol, atmospheres, etc.
atom_style      full  # what attributes are associated with the atoms in the simulation, full = molecular + charge
                      # molecular = bonds, angles, dihedrals, impropers; charge = charge
boundary        p p p # [p]eriodic 

pair_style      lj/cut 14.000 # cutoff Lennard-Jones potential at 14.0 angstroms without Coulomb
bond_style      harmonic
angle_style     cosine/periodic
dihedral_style  harmonic
improper_style  fourier

dielectric      1.0 # Set the dielectric constant for Coulombic interactions (pairwise and long-range) to this value.
pair_modify     tail yes mix arithmetic # include tail corrections, use arithmetic mixing rules
special_bonds   lj/coul 0.0 0.0 1.0 # LJ and Coulomb interaction weighting coeffs for 1-2, 1-3, and 1-4 atom pairs
box tilt        large # amount of displacement applied to faces of box to transform it into the parallelepiped.
read_data       data.Pn_Ni-PyC-NH2 # cntains box dims, atom and bond info

#### Atom Groupings ####
group           fram     id   1:1116
#### END Atom Groupings ####

variable        dt         equal 1.00 # femtoseconds
variable        tdamp      equal 100*${dt} 
# The Tdamp parameter is specified in time units and determines how rapidly the temperature is relaxed
###
#  Equilibriation stage
###
fix             1 fram langevin 298.00 298.00 ${tdamp} 490858 # equilibriation cycles
fix             2 fram nve # constant NVE time integration equs of motoin to update position and momentum of the atoms
thermo          0 # how frequently to print thermodynamic information
run             200000 # perform equilibriation cycles. time = dt * 200000fs = 200ps
unfix           1
unfix           2
###
#  Production stage
# --------------------------------------------------------------------------------
#  Perform time integration on Nose-Hoover style non-Hamiltonian equations of motion 
#  which are designed to generate positions and velocities sampled from the canonical (nvt)
#  This updates the position and velocity for atoms in the group each timestep
#  The thermostat parameters for fix styles nvt and npt are specified using the temp keyword
###
fix             3 fram nvt temp 298.00 298.00 ${tdamp}
thermo          1
run             200000 # perform production cycles
unfix           3


